#event properties (no comments/etc. here are saved)
parent_index = -1;
uses_physics = false;

#event create

Time = 1*60;
depth = -100;

#event step

//Destroy object after timer is finished
if(Time > 0)
    Time -= 1;
else
    instance_destroy();

//Set image alpha proportional to time
image_alpha = 0.5+(Time/60);

//Increase height of emote
y -= 1;

#event draw

draw_self();